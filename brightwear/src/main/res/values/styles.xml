<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/gray</item>
        <item name="android:colorControlHighlight">@color/gray</item>
    </style>

    <style name="AppThemeNoSwipe" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/gray</item>
        <item name="android:colorControlHighlight">@color/gray</item>
        <item name="android:windowSwipeToDismiss">false</item>
    </style>

</resources>

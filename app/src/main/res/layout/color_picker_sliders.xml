<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:padding="20dp"
    android:id="@+id/color_picker_background"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_color_picker"
        android:text="Light color"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/preset_one"
                android:src="@drawable/circle_color"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/preset_two"
                android:src="@drawable/circle_color"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/preset_three"
                android:src="@drawable/circle_color"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/preset_four"
                android:src="@drawable/circle_color"
                android:layout_height="50dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:scaleType="fitCenter"
        android:id="@+id/color_spectrum"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/color_spectrum"
        android:layout_marginTop="16dp"
        android:layout_height="200dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_gravity="center"
        android:id="@+id/color"
        android:layout_marginTop="16dp"
        android:src="@drawable/circle_color"
        android:layout_height="50dp" />

</LinearLayout>